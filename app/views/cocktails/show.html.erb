<div class="container">

  <p> <%= @cocktail.name  %></p>


  <ul>
    <% @cocktail.doses.each do |dose| %>
     <li><%= dose.ingredient.name %> -  <%= dose.description %>

       <%= link_to "Delete", cocktail_dose_path(@cocktail, dose ),
             method: :delete,
             data: { confirm: "Are you sure?" } %>
     </li>

    <% end %>
  </ul>

  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

  <%= link_to "back to list", cocktails_path %>
  <%= link_to "add an ingredient", new_cocktail_dose_path(@cocktail) %>
</div>
